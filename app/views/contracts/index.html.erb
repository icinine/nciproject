<h1>Listing contracts</h1>

<table>
  <thead>
    <tr>
      <th>Desc</th>
      <th>Region</th>
      <th>Value</th>
      <th>Saving</th>
      <th>Supplier</th>
      <th>Contact</th>
      <th>Dept</th>
      <th>Download</th>
      <th>Validfrom</th>
      <th>Validto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.desc %></td>
        <td><%= contract.region %></td>
        <td><%= contract.value %></td>
        <td><%= contract.saving %></td>
        <td><%= contract.supplier %></td>
        <td><%= contract.contact %></td>
        <td><%= contract.dept %></td>
        <td><%= contract.download %></td>
        <td><%= contract.validFrom %></td>
        <td><%= contract.validTo %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contract', new_contract_path %>
